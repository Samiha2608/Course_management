<div class="container mt-4">
  <!-- Course Details -->
  <div class="card mb-4">
    <div class="card-header">
      <h2><%= @course.course_name %></h2>
    </div>
    <div class="card-body">
      <p class="card-text"><strong>Hours:</strong> <%= @course.course_hour %></p>
      <p class="card-text"><strong>Price:</strong> $<%= @course.price %></p>
      <p class="card-text"><strong>Description:</strong> <%= @course.description %></p>
      <p class="card-text"><strong>Tags:</strong> <%= @course.tags.map(&:name).join(", ") %></p>

      <div class="mt-3">
        <%= link_to "Back", student_courses_path, class: "btn btn-secondary" %>
      </div>
    </div>

    <!-- Add Comment Form -->
    <%= form_with model: [ :student, @course, Comment.new ], local: true do |f| %>
      <div class="card-body border-top">
        <div class="mb-3">
          <%= f.text_area :content, placeholder: "Write a comment...", class: "form-control", rows: 3 %>
        </div>
        <%= f.submit "Add Comment", class: "btn btn-primary" %>
      </div>
    <% end %>

    <!-- Comments List -->
    <ul class="list-group list-group-flush">
      <% @course.comments.each do |comment| %>
        <li class="list-group-item">
          <div class="d-flex justify-content-between align-items-start">
            <div>
              <p class="mb-1"><%= comment.content %></p>
              <small class="text-muted">by <%= comment.author.name %></small>
            </div>

            <% if comment.author == current_user %>
              <div class="btn-group btn-group-sm">
                <%= link_to "Edit", edit_student_course_comment_path(@course, comment), class: "btn btn-outline-secondary btn-sm" %>
                <%= button_to "Delete", student_course_comment_path(@course, comment),
                    class: "btn btn-danger btn-sm",
                    method: :delete, 
                    data: { confirm: "Are you sure?" } %>
              </div>
            <% end %>
          </div>
        </li>
      <% end %>

      <% if @course.comments.empty? %>
        <li class="list-group-item text-muted text-center">No comments yet.</li>
      <% end %>
    </ul>
  </div>
</div>
