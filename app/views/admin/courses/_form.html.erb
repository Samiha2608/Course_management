<%= form_with model: [:admin, @course] do |f| %>
  <% if @course.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <h4><%= pluralize(@course.errors.count, "error") %> prohibited this course from being saved:</h4>
      <ul class="mb-0">
        <% @course.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="mb-3 field col-sm-3">
    <%= f.label :course_name ,class:"form-label" %><br>
    <%= f.text_field :course_name, placeholder: "enter course name" , class: "form-control #{'is-invalid' if @course.errors[:course_name].any?}"%>
    <% if @course.errors[:course_name].any? %>
      <div class="invalid-feedback">
        <%= @course.errors[:course_name].first %>
      </div>
    <% end %>
  </div>
  <div class="mb-3 field col-sm-3">
    <%= f.label :course_hour ,class:"form-label"%><br>
    <%= f.number_field :course_hour, placeholder: "enter course hours" , class: "form-control #{'is-invalid' if @course.errors[:course_hour].any?}"%>
     <% if @course.errors[:course_hour].any? %>
      <div class="invalid-feedback">
        <%= @course.errors[:course_hour].first %>
      </div>
    <% end %>
  </div>
  <div class="mb-3 field col-sm-3">
   <%= f.label :price ,class:"form-label"%><br>
    <%= f.number_field :price , placeholder: "enter price of the course" , class: "form-control #{'is-invalid' if @course.errors[:price].any?}"%>
     <% if @course.errors[:price].any? %>
      <div class="invalid-feedback">
        <%= @course.errors[:price].first %>
      </div>
    <% end %>
  </div>
  <div class="mb-3 field col-sm-3">
    <%= f.label :description ,class:"form-label"%><br>
    <%= f.text_area :description, placeholder: "enter description if any" , class: "form-control #{'is-invalid' if @course.errors[:description].any?}"%>
     <% if @course.errors[:description].any? %>
      <div class="invalid-feedback">
        <%= @course.errors[:description].first %>
      </div>
    <% end %>
  </div>
  <div class="field mb-3 form-check">
    <%= f.label :tag_ids, "Tags" ,class: "form-check-label"%><br>
    <%= f.collection_check_boxes :tag_ids, Tag.all, :id, :name ,class: "form-check-input"%>
  </div>
  <%= f.submit %>
  
<% end %>

  
