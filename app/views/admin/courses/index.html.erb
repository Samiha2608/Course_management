<h1>All Courses</h1>

<%= link_to "New Course", new_admin_course_path, class: "btn btn-primary" %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Hours</th>
      <th>Price</th>
      <th>Tags</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.course_name %></td>
        <td><%= course.course_hour %></td>
        <td><%= course.price %></td>
        <td><%= course.tags.map(&:name).join(", ") %></td>
       <td>
            <%= link_to "Show", admin_course_path(course) %> |
            <%= link_to "Edit", edit_admin_course_path(course) %> |
            <%= button_to "Delete", admin_course_path(course), 
              method: :delete, 
              data: { confirm: "Are you sure you want to delete this course?" } %>
        </td>

      </tr>
    <% end %>
  </tbody>
</table>
