<div class="container">
  <div class="d-flex align-items-center">
      <h1>All Courses</h1>
       <%= link_to "create Course", new_admin_course_path(@course), class: "btn btn-primary ms-auto" %>
  </div>
  <p class="notice"><%= flash[:notice] %></p>

  <div class="row">
    <% @courses.each do |course| %>
      <div class="col-md-4 mb-4">
        <div class="card h-100">
          <%= image_tag "6461.jpg", class: "card-img-top", alt: course.course_name, style: "height: 200px; object-fit: cover;" %>
          <div class="card-body">
            <h5 class="card-title"><%= course.course_name %></h5>
            <p class="card-text">
              <strong>Duration:</strong> <%= course.course_hour %> hours<br>
              <strong>Price:</strong> $<%= course.price %>
            </p>
            <%= link_to "Show Details", admin_course_path(course), class: "btn btn-primary" %>
          </div>
          
          <!-- Tags below the card -->
          <% if course.tags.any? %>
            <div class="card-footer bg-light">
              <% course.tags.each do |tag| %>
                <span class="badge bg-secondary me-1 mb-1"><%= tag.name %></span>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>