<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow-lg">
        <div class="card-header bg-primary text-white text-center">
          <h1 class="mb-0">Welcome to the Portal</h1>
        </div>
        <div class="card-body text-center">

          <% if user_signed_in? %>
            <h4 class="mb-3">Hello, <%= current_user.name %>!</h4>
            <%= link_to 'Go to Dashboard', after_sign_in_path_for(current_user), class: 'btn btn-success me-2' %>
            <%= link_to 'Logout', destroy_user_session_path, method: :delete, data: { confirm: "Are you sure you want to log out?" }, class: 'btn btn-danger' %>
          
          <% else %>
            <p class="lead">Please log in to access your dashboard.</p>
            <%= link_to 'Login', new_user_session_path, class: 'btn btn-primary btn-lg' %>
          <% end %>

        </div>
      </div>
    </div>
  </div>
</div>
